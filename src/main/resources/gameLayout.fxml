<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    
    <!-- Game Board -->
    <Pane>

        <GridPane fx:id="brickPanel" vgap="0" hgap="0"/>

        <BorderPane styleClass="gameBoard" fx:id="gameBoard">
            <center>
                <GridPane fx:id="gamePanel" hgap="0" vgap="0" layoutY="30" layoutX="40"/>
            </center>
        </BorderPane>

    </Pane>

    <!-- Hold Block -->
    <VBox layoutX="250">
        <Pane styleClass="holdBoard" fx:id="holdBoard" prefHeight="125" prefWidth="150">
            <Label text="HOLD" styleClass="sectionLabel" layoutX="10" layoutY="10"/>
            <GridPane fx:id="holdPanel" hgap="0" vgap="0" layoutX="30" layoutY="40"/>
        </Pane>

        <!-- Next Block -->
        <Pane styleClass="nextBoard" fx:id="nextBoard" layoutX="450" prefHeight="300" prefWidth="150">
            <Label text="NEXT" styleClass="sectionLabel" layoutX="10" layoutY="10"/>
            <GridPane fx:id="nextPanel" layoutX="30" layoutY="40"/>
        </Pane>
    </VBox>

    <!-- Notification -->
    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>